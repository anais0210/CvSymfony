{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{asset('bundles/app/css/listeEtoile.css')}}">
    <script>
    	var staronPath = "{{asset('bundles/app/img/staron.gif')}}";
    	var staroffPath = "{{asset('bundles/app/img/staroff.gif')}}";
    </script>
    <script src="{{asset('bundles/app/js/listeEtoile.js')}}"></script>
{% endblock %}
{% block body %}

<h2> Pour me permettre d'avancer, laissez donc un commentaire et une note !  </h2>
<div class="container">
	<div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
			{{form_start(form)}}
			{{form_widget(form.note)}}
			<div class="control-group">
				<div class="form-group floating-label-form-group controls">
					{{form_widget(form.pseudo)}}
				</div>
			</div>
          	<div class="control-group">
              	<div class="form-group floating-label-form-group controls">
              		{{form_widget(form.commentaire)}}
              	</div>
            </div>
        	<tbody>
				<tr style='height:45px;'>
					<td><div id='A1'><script type='text/javascript'>CreateListeEtoile('A1',5);</script></div></td>
					</td>
				</tr>
			</tbody>
     	</div>
	  	<div class="form-group">
     		{{form_widget(form.envoyer)}}
  		</div>


		{{form_end(form)}}
	</div>
</div>

{{ render(controller('AppBundle:Evaluation:evaluation')) }}
{% endblock %}

{% block javascripts %}
	<script>
		$(document).ready(function() {
			$('.star-li').on('click', function(e) {
				id = $(e.currentTarget).attr('id')
				$('.star-input').val(id);
			});
		});
	</script>
{% endblock %}